# Основные настройки приложения
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Anonymize App
NEXT_PUBLIC_APP_DESCRIPTION=Приложение для анонимизации данных

# API ключи и настройки
# ВАЖНО: Не храните реальные API ключи в .env файле в репозитории!
# Используйте .env.vault для зашифрованного хранения ключей
# См. инструкции в .env.vault
NEXT_PUBLIC_API_URL=https://api.example.com/v1

# Настройки базы данных (если требуется)
DATABASE_URL=

# Настройки аутентификации (если требуется)
AUTH_SECRET=
NEXT_PUBLIC_AUTH_ENABLED=true

# Настройки безопасности
NEXT_PUBLIC_CSP_CONNECT_SRC="'self' https://*.vercel-analytics.com"
NEXT_PUBLIC_CSP_SCRIPT_SRC="'self' 'unsafe-eval' 'unsafe-inline' https://*.vercel-analytics.com"

# Социальные сети и репозитории
NEXT_PUBLIC_GITHUB_URL=https://github.com/user/anonymize-app

# Дополнительные настройки
NODE_ENV=development
NEXT_PUBLIC_GA_TRACKING_ID=

# Флаги фич
NEXT_PUBLIC_FEATURE_ADVANCED_ANONYMIZE=true
NEXT_PUBLIC_FEATURE_EXPORT_PDF=false 